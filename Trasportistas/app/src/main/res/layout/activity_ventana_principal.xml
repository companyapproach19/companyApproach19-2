<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VentanaPrincipal">

    <Button
        android:id="@+id/asignar_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listado de pedidos por recoger"
        android:onClick="asignar_pedido"
        app:layout_constraintBottom_toTopOf="@+id/pedido_recogido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/pedido_recogido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedidos Pendientes de Entrega"
        android:onClick="pedido_recogido"
        app:layout_constraintBottom_toTopOf="@+id/historial_pedidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asignar_pedido"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/historial_pedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Pedidos Recogidos"
        android:onClick="historial_pedidos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pedido_recogido"
        app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>